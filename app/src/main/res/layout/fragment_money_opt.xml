<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.asus.freingo.fragments.MoneyOptFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Money option"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/amount_card"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="38dp"
                        android:layout_marginEnd="27dp"
                        android:layout_toStartOf="@+id/imageView4"
                        android:text="1.Put an amount of money you want to spend." />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/textView3"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        app:srcCompat="@drawable/money" />


                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/amount_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView4"
                        android:layout_alignStart="@+id/textView3"
                        app:isb_indicator_color="@color/colorPrimary"
                        app:isb_indicator_text_color="@android:color/white"
                        app:isb_indicator_text_size="18sp"
                        app:isb_max="1000"
                        app:isb_min="10"
                        app:isb_only_thumb_draggable="true"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/colorPrimary"
                        app:isb_thumb_size="20dp"
                        app:isb_tick_texts_color="@color/colorPrimary"
                        app:isb_tick_texts_size="15sp"
                        app:isb_track_background_color="#aba2a2"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/colorPrimary"
                        app:isb_track_progress_size="4dp" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/amount_seekbar"
                        android:layout_alignEnd="@+id/imageView4"
                        android:text="DT" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription=""
                app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="39dp"
                        app:srcCompat="@drawable/friends" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView5"
                        android:layout_marginStart="27dp"
                        android:layout_toEndOf="@+id/imageView5"
                        android:paddingEnd="15dp"
                        android:text="2.Set the number of persons you want to hang out with." />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/person_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/imageView5"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        app:isb_indicator_color="@color/colorPrimary"
                        app:isb_indicator_text_color="@android:color/white"
                        app:isb_indicator_text_size="18sp"
                        app:isb_max="30"
                        app:isb_min="1"
                        app:isb_only_thumb_draggable="true"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/colorPrimary"
                        app:isb_thumb_size="20dp"
                        app:isb_tick_texts_color="@color/colorPrimary"
                        app:isb_tick_texts_size="15sp"
                        app:isb_track_background_color="#aba2a2"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/colorPrimary"
                        app:isb_track_progress_size="4dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription=""
                app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/place" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView6"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="27dp"
                        android:layout_toStartOf="@+id/imageView6"
                        android:text="3.Choose the type of divertissement." />

                    <RadioGroup
                        android:id="@+id/places"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="25dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_marginRight="3dp"
                            android:textColor="@android:color/tertiary_text_light"
                            android:id="@+id/restau"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView19"
                            android:layout_alignBottom="@+id/textView19"
                            android:layout_toEndOf="@+id/imageView8"
                            android:checked="true"
                            android:text="Restaurant"
                            android:theme="@style/MyCheckbox" />

                        <RadioButton
                            android:layout_marginRight="3dp"
                            android:textColor="@android:color/tertiary_text_light"
                            android:id="@+id/coffshop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView20"
                            android:layout_alignStart="@+id/foot"
                            android:layout_alignBottom="@+id/textView20"
                            android:text="Coffe shop"
                            android:theme="@style/MyCheckbox" />



                        <RadioButton
                            android:textColor="@android:color/tertiary_text_light"
                            android:text="Lounge"
                            android:id="@+id/lounge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView22"
                            android:layout_alignBottom="@+id/textView22"
                            android:layout_alignParentEnd="true"
                            android:theme="@style/MyCheckbox" />


                    </RadioGroup>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription=""
                app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="39dp"
                        app:srcCompat="@drawable/taxi" />
                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView8"
                        android:layout_marginStart="26dp"
                        android:layout_toEndOf="@+id/imageView8"
                        android:text="4.Choose how do you prefer to reach your distination." />

                    <RadioGroup
                        android:id="@+id/transport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="25dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_marginRight="3dp"
                            android:textColor="@android:color/tertiary_text_light"
                            android:id="@+id/foot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView19"
                            android:layout_alignBottom="@+id/textView19"
                            android:layout_toEndOf="@+id/imageView8"
                            android:checked="true"
                            android:text="On foot"
                            android:theme="@style/MyCheckbox" />

                        <RadioButton
                            android:layout_marginRight="3dp"
                            android:textColor="@android:color/tertiary_text_light"
                            android:id="@+id/car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView20"
                            android:layout_alignStart="@+id/foot"
                            android:layout_alignBottom="@+id/textView20"
                            android:text="By car"
                            android:theme="@style/MyCheckbox" />



                        <RadioButton
                            android:textColor="@android:color/tertiary_text_light"
                            android:text="By taxi"
                            android:id="@+id/taxi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView22"
                            android:layout_alignBottom="@+id/textView22"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            android:theme="@style/MyCheckbox" />


                    </RadioGroup>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription=""
                app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <Button
                android:id="@+id/search"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:background="@color/colorPrimary"
                android:drawablePadding="0dp"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:text="Search "
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
