<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
             android:background="#f5f5f5"
             android:layout_marginTop="85dp"
             tools:context="com.example.asus.friengo.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/money_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="34dp"
                        android:text="Money Option"
                        android:textColor="#f4631a"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_below="@+id/textView5"
                        android:layout_marginEnd="100dp"
                        android:layout_marginTop="12dp"
                        android:text="Put an amount of money to get suggestions of places you can go."
                        android:textColor="#979797"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="25dp"
                        app:srcCompat="@drawable/groupe75"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/distance_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/textView8"
                        android:layout_marginTop="30dp"
                        android:text="Distance Option"
                        android:textColor="#f4631a"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/textView7"
                        android:layout_marginEnd="9dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="10dp"
                        android:text="Configure the radius of the distance to find places neabry ."
                        android:textColor="#979797"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView8"
                        android:layout_below="@+id/textView7"
                        app:srcCompat="@drawable/groupe74"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/actuality_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="34dp"
                        android:text="Actuality"
                        android:textColor="#f4631a"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView9"
                        android:layout_below="@+id/textView9"
                        android:layout_marginEnd="100dp"
                        android:layout_marginTop="12dp"
                        android:text="Keep in touch with the top rated places ."
                        android:textColor="#979797"
                        />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="22dp"
                        app:srcCompat="@drawable/groupe11"
                        android:layout_alignBottom="@+id/textView10"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

