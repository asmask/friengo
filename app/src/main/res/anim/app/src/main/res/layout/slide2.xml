<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="17dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="s2.json"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lottieAnimationView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/activedots"
        android:textSize="35dp"
        android:gravity="center|center_horizontal"
        android:text="Choose Between 2 Options"
        android:layout_below="@+id/lottieAnimationView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/activedots"
        android:gravity="center|center_horizontal"
        android:text="We Allow you to choose between Money option or Distance option to help you to find your destinations ."
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />

</RelativeLayout>